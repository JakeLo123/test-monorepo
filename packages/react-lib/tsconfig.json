{
  "compilerOptions": {
    // base options
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "allowJs": true,
    "isolatedModules": true,

    // strictness/linting
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // transpiling
    "module": "ESNext",
    "outDir": "dist",

    // include type declarations
    "declaration": true,

    // emits tsbuild.info files for caching so the monorepo can build faster
    "composite": true,
    // debugging sourcemaps for users of the library
    "sourceMap": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,

    // react
    "jsx": "react-jsx",

    // for running in the DOM
    "lib": ["es2022", "dom", "dom.iterable"]
  },
  "include": ["src"]
}
